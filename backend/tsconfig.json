{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2022",
    "module": "NodeNext", // ← change to NodeNext
    "moduleResolution": "NodeNext", // ← keep NodeNext
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "isolatedModules": true,
    "types": ["node"]
  },
  "include": ["src"]
}
